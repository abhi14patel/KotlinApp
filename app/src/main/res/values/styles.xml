<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:actionMenuTextColor">@color/colorWhite</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <!-- for text with white color -->
    <style name="CustomWhiteFont" parent="@android:style/TextAppearance">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:gravity">center</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/colorWhite</item>/>
    </style>

    <style name="CustomWhiteFont1" parent="@android:style/TextAppearance">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:gravity">center</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/colorWhite</item>/>
    </style>

    <!-- for text with grey color -->
    <style name="CustomGreyFont" parent="@android:style/TextAppearance">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:gravity">center</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/colorGray2</item>/>
    </style>

    <style name="CustomGreyFont1" parent="@android:style/TextAppearance">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:gravity">center</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/colorGray2</item>/>
    </style>

    <!-- for text with black color -->
    <style name="CustomBlackFont" parent="@android:style/TextAppearance">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:gravity">center</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/colorBlack</item>/>
    </style>

    <style name="CustomBlackFont1" parent="@android:style/TextAppearance">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:gravity">center</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/colorBlack</item>/>
    </style>

    <!--Custom Button-->
    <style name="CustomButton">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_40sdp</item>
        <item name="android:background">@drawable/btn_login</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
    </style>

    <!--CustomEdittext-->
    <style name="CustomEditText" parent="@android:style/TextAppearance">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_35sdp</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:gravity">left|center</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
        <item name="android:layout_gravity">left|center</item>
        <item name="android:padding">@dimen/_10sdp</item>
        <item name="android:background">@null</item>
        <item name="android:maxLines">1</item>
        <item name="android:textCursorDrawable">@drawable/color_cursor</item>
        <item name="android:textColorHint">@color/colorDarkGray</item>
        <item name="android:textColor">@color/colorDarkGray</item>/>
        <item name="android:fontFamily">@fonts/OpenSansRegular</item>
    </style>

    <!--CustomEdittext-->
    <style name="CustomEditText2" parent="@android:style/TextAppearance">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_35sdp</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:gravity">left|center</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
        <item name="android:layout_gravity">left|center</item>
        <item name="android:padding">@dimen/_10sdp</item>
        <item name="android:background">@null</item>
        <item name="android:textCursorDrawable">@drawable/color_cursor</item>
        <item name="android:textColorHint">@color/colorDarkGray</item>
        <item name="android:textColor">@color/colorBlack</item>/>
        <item name="android:fontFamily">@fonts/OpenSansRegular</item>
    </style>


</resources>